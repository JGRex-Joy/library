<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300" prefWidth="400" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.main.library.controllers.LoginController">

    <children>
        <Label alignment="CENTER" layoutX="160.0" layoutY="40.0" prefHeight="35.0" prefWidth="70.0" text="Login" textAlignment="JUSTIFY">
         <font>
            <Font size="24.0" />
         </font></Label>

        <TextField fx:id="usernameField" layoutX="100" layoutY="90" prefWidth="200" promptText="Username" />

        <PasswordField fx:id="passwordField" layoutX="100" layoutY="140" prefWidth="200" promptText="Password" />

        <Button layoutX="100" layoutY="190" onAction="#onLogin" prefWidth="200" text="Login" />

        <Hyperlink layoutX="150" layoutY="240" onAction="#goToRegister" text="Create Account" />
    </children>
</AnchorPane>
