<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="564.0" prefWidth="841.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.main.library.application.LibraryController">

    <children>
        <Text layoutX="56.0" layoutY="139.0" text="Add new book">
            <font><Font name="System Bold" size="19.0" /></font>
        </Text>

        <TextField fx:id="author" layoutX="46.0" layoutY="180.0" promptText="Author name" />
        <TextField fx:id="book" layoutX="46.0" layoutY="225.0" promptText="Book name" />
        <TextField fx:id="isbn" layoutX="46.0" layoutY="273.0" promptText="ISBN" />
        <TextField fx:id="category" layoutX="46.0" layoutY="321.0" promptText="Category" />

        <Button layoutX="78.0" layoutY="375.0" onAction="#addItem" text="Add book">
            <font><Font size="15.0" /></font>
        </Button>

        <ListView fx:id="booksList" layoutX="238.0" layoutY="71.0" prefHeight="406.0" prefWidth="527.0" stylesheets="@listview.css" />

        <Text layoutX="214.0" layoutY="50.0" text="Author;Title;ISBN;Category">
            <font><Font name="System Bold" size="19.0" /></font>
        </Text>

        <TextField fx:id="search" layoutX="479.0" layoutY="31.0" onKeyTyped="#searchBook" prefHeight="31.0" prefWidth="162.0" promptText="Search..." />

        <Button fx:id="edit" layoutX="664.0" layoutY="28.0" onAction="#editBook" text="Edit">
            <font><Font size="15.0" /></font>
        </Button>

        <Button fx:id="delete" layoutX="726.0" layoutY="28.0" onAction="#deleteBook" text="Delete">
            <font><Font size="15.0" /></font>
        </Button>
    </children>

</AnchorPane>
