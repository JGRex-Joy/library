<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="564.0" prefWidth="798.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.main.library.LibraryController">

<children>

        <Text layoutX="56.0" layoutY="139.0" text="Add new book">
            <font><Font name="System Bold" size="19.0" /></font>
        </Text>

        <TextField fx:id="author" layoutX="46.0" layoutY="180.0" promptText="Author name" />
        <TextField fx:id="book" layoutX="46.0" layoutY="225.0" promptText="Book name" />
        <TextField fx:id="isbn" layoutX="46.0" layoutY="273.0" promptText="ISBN" />
        <TextField fx:id="category" layoutX="46.0" layoutY="321.0" promptText="Category" />

        <Button layoutX="78.0" layoutY="375.0" onAction="#addItem" text="Add book">
            <font><Font size="15.0" /></font>
        </Button>

        <!-- NEW TABLEVIEW -->
        <TableView fx:id="booksTable" layoutX="238.0" layoutY="71.0" prefHeight="391.0" prefWidth="515.0">

            <columns>

                <TableColumn fx:id="colAuthor" prefWidth="130" text="Author" />
                <TableColumn fx:id="colTitle" prefWidth="130" text="Title" />
                <TableColumn fx:id="colIsbn" prefWidth="120" text="ISBN" />
                <TableColumn fx:id="colCategory" prefWidth="130" text="Category" />

            </columns>
        </TableView>

        <TextField fx:id="search" layoutX="238.0" layoutY="28.0" onKeyTyped="#searchBook" prefHeight="31.0" prefWidth="162.0" promptText="Search..." />

        <Button fx:id="edit" layoutX="617.0" layoutY="28.0" onAction="#editBook" text="Edit">
            <font><Font size="15.0" /></font>
        </Button>

        <Button fx:id="delete" layoutX="679.0" layoutY="28.0" onAction="#deleteBook" text="Delete">
            <font><Font size="15.0" /></font>
        </Button>

    </children>

</AnchorPane>
