<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="350" prefWidth="400" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.main.library.controllers.RegisterController">

    <children>
        <Label alignment="CENTER" layoutX="158.0" layoutY="40.0" text="Register">
         <font>
            <Font size="24.0" />
         </font></Label>

        <TextField fx:id="usernameField" layoutX="100" layoutY="90" prefWidth="200" promptText="Username" />

        <PasswordField fx:id="passwordField" layoutX="100" layoutY="140" prefWidth="200" promptText="Password" />

        <PasswordField fx:id="confirmPasswordField" layoutX="100" layoutY="190" prefWidth="200" promptText="Confirm password" />

        <Button layoutX="100" layoutY="240" onAction="#onRegister" prefWidth="200" text="Register" />

        <Hyperlink layoutX="130" layoutY="290" onAction="#goToLogin" text="I already have an account" />
    </children>
</AnchorPane>
